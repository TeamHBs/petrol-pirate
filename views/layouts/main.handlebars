<html lang='en'>

    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>Petrol Pirate</title>
        <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' />
        <link rel='stylesheet' href='/css/jass.css' />
        <link rel='stylesheet' href='/css/style.css' />
    </head>

    <body>
        <div class='flex-column justify-space-around gradient-bg'>
            <header class='display-flex justify-space-between align-center p-2'>

                <nav class='flex navbar w-100'>
                    <h1>
                        <a class='petrol-pirate' href='/'>Petrol Pirate</a>
                    </h1>
                    <!-- Conditionally render login or logout links -->
                    <ul class='menu'>
                        {{#if logged_in}}
                            <li><button class='btn btn-outline-light rounded-pill nav-btn'><a href='/submit' class='nav-link'>Submit a Gas Price</a></button></li>
                            <li class='text-white no-button nav-btn' id='logout'><a href='#' class='nav-link'>Logout</a></li>
                        {{else}}
                            <li><button class='btn nav-btn'><a href='/login' class='nav-link'>Login</a></button></li>
                        {{/if}}
                    </ul>
                    <div class='hamburger'>
                        <span class='hamburger-bar'></span>
                        <span class='hamburger-bar'></span>
                        <span class='hamburger-bar'></span>
                    </div>
                </nav>
            </header>
            <main class='container container-fluid mt-5 m-top'>
                <!-- Render the sub layout -->
                {{{body}}}
            </main>
            <footer>

            </footer>
        </div>

        <!-- Render script for logged in users only -->
        {{#if logged_in}}
            <script src='/js/logout.js'></script>
        {{/if}}
    </body>

</html>