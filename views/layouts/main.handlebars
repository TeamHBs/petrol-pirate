<html lang='en'>

    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>Petrol Pirate</title>
        <link rel='preconnect' href='https://fonts.googleapis.com' />
        <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
        <link href='https://fonts.googleapis.com/css2?family=Roboto:wght@300;500;700&display=swap' rel='stylesheet' />
        <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' />
        <link rel='stylesheet' href='/css/jass.css' />
        <link rel='stylesheet' href='/css/style.css' />
    </head>

    <body>
        <div class='flex-column justify-space-around gradient-bg main-text'>
            <header class='display-flex justify-space-between align-center p-2'>

                <nav class='flex navbar w-100'>
                    <a href='/'><img src='/img/petrol-pirate-logo.gif' alt='petrol pirate logo' width='30%' height='30%' /></a>

                    {{! <h1>
                        <a class='petrol-pirate' href='/'>Petrol Pirate</a>
                    </h1> }}
                    <!-- Conditionally render login or logout links -->
                    <ul class='menu'>
                        {{#if logged_in}}
                            <li><button class='btn btn-primary rounded-pill px-4 py-3'><a href='/submit'>Submit a Gas Price</a></button></li>
                            <li class='text-white nav-link btn-primary rounded-pill px-4 py-3' id='logout'><a href='#' class=''>Logout</a></li>
                        {{else}}
                            <li><button class='btn nav-btn nav-link btn btn-primary rounded-pill px-4 py-3'><a href='/login' class=''>Login</a></button></li>
                        {{/if}}
                    </ul>
                    <div class='hamburger'>
                        <span class='hamburger-bar'></span>
                        <span class='hamburger-bar'></span>
                        <span class='hamburger-bar'></span>
                    </div>
                </nav>
            </header>
            <main class='container container-fluid mt-5 m-top'>
                <!-- Render the sub layout -->
                {{{body}}}
            </main>
            <footer class='footer-style my-2'>
                Created by TeamHB's
                <br />
                <p>Check out our member's GitHub profiles!</p>
                <div>
                    <a class='px-1' href='https://github.com/RedComet6' target='_blank'>
                        Aidan Chamberlain
                    </a>
                    |
                    <a class='px-1' href='https://github.com/gwenewasko' target='_blank'>
                        Gwen Ewasko
                    </a>
                    |
                    <a class='px-1' href='https://github.com/smarr2198' target='_blank'>
                        Stephen Marr
                    </a>
                    |
                    <a class='px-1' href='https://github.com/joepamedia/' target='_blank'>
                        Joe Palmisano
                    </a>
                </div>
            </footer>
        </div>

        <!-- Render script for logged in users only -->
        {{#if logged_in}}
            <script src='/js/logout.js'></script>
        {{/if}}
    </body>

</html>