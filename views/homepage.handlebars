{{! filter bar }}
<form class='d-flex flex-wrap' action='' id='filterForm'>
    <div class='form-group'>
        <label for='filter'>Filter results by:</label>
        <select class='dropdown' name='filter' id='filterChoice'>
            <option class='dropdown' value='' disabled selected>Select a filter</option>
            <option value='price'>Max Price</option>
            <option value='zip'>Zip Code</option>
        </select>
    </div>
    <div class='form-group'>
        <label placeholder='Enter value here...' for='filter'></label>
        <input type='text' id='filterInput' />
    </div>
    <div class='form-group'>
        <button type='submit' class='btn btn-primary' id='filterSubmit'>See My Results</button>
    </div>
</form>

{{! history }}

<div>{{message}}</div>
{{! display area }}

<h2>Cheap gas locations:</h2>
<table>
    <tr>
        <th>Price</th>
        <th>Posted By</th>
        <th>Station</th>
        <th>Address</th>
        <th>Zip Code</th>
    </tr>
    <!-- Loop over each object in the prices array -->
    {{#each prices as |price|}}
        <tr>
            <td>${{price.price}}</td>
            <td>{{price.user.name}}</td>
            <td>{{price.station.name}}</td>
            <td>{{price.station.address}}</td>
            <td>{{price.station.zip}}</td>
        </tr>
    {{/each}}
</table>
<script src='./js/homepage.js'></script>